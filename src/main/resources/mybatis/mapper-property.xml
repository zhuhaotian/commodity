<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jk.mapper.PropertyMapper">

    <!--查询-->
    <select id="queryListAttribute" parameterType="map" resultType="com.jk.bean.Attribute">
     SELECT
      t1.Id id,
      t1.shxm_mch shxmMch,
      t1.chjshj,
      GROUP_CONCAT(t2.shxzh, t2.shxzh_mch) shxmValue
      FROM
      t_mall_attr t1
      LEFT JOIN t_mall_value t2 ON t1.Id = t2.shxm_id
      GROUP BY
      t1.Id
      limit #{start},#{end}
    </select>

    <insert id="addMallAttr" parameterType="com.jk.bean.MallAttr" keyProperty="id" useGeneratedKeys="true">
      insert into t_mall_attr (shxm_mch,shfqy,flbh2) value (#{shxm_mch},'1',54)
    </insert>
    <!--void addAttr(ArrayList<Attribute> attribute);-->
    <insert id="addAttr">
        insert into t_mall_value (shxzh,shfqy,shxm_id,shxzh_mch)VALUES
        <foreach item="item" index="index" separator="," collection="attribute">
         (#{item.shxzh},'1',#{item.shxm_id},#{item.shxzh_mch})
         </foreach>
    </insert>
</mapper>